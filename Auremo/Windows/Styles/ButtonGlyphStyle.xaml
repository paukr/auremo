<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:l="clr-namespace:Auremo">
    <Style x:Key="ButtonGlyphStyle" TargetType="{x:Type Path}">
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="Stretch" Value="None"/>
        <Setter Property="Fill">
            <Setter.Value>
                <Binding RelativeSource="{RelativeSource AncestorType=Button}" Path="Foreground"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="StickyButtonGlyphStyle" TargetType="{x:Type Path}">
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="Stretch" Value="None"/>
        <Setter Property="Fill">
            <Setter.Value>
                <Binding RelativeSource="{RelativeSource AncestorType=l:StickyButton}" Path="Foreground"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
